{% extends "customer/base_customer.html.twig" %}

{% block body %}

	{# PARTIE HEADER #}
	<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">

			{% for key,category in categories %}

				{% if key is same as 0 %}
					<div class="carousel-item active">
						<img src="{{ asset(category.imagePath) }}" class="d-block w-100 imageCarroussel" alt="{{ category.name }}">
						<a class="btn btn-light btn-lg border border-success rounded-success buttonCarroussel" href="{{ path('customer_category_show',{'id' : category.id}) }}">Consulter les produits</a>
					</div>
				{% else %}
					<div class="carousel-item">
						<img src="{{ asset(category.imagePath) }}" class="d-block w-100 imageCarroussel" alt="{{ category.name }}">
						<a class="btn btn-light btn-lg border border-success rounded-success buttonCarroussel" href="{{ path('customer_category_show',{'id' : category.id}) }}">Consulter les produits</a>
					</div>
				{% endif %}

			{% endfor %}

		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

	{# PARTIE MENU #}


	<div class="container">
		<div class="row">
			<div class="col-12 mt-3 text-center ">
				<h1>Menu</h1>
			</div>
			<div class="col-12 mt-3">
				{% include "customer/shared/_messages_flash.html.twig" %}
			</div>

			{% for category in categories %}
				<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
					<div class="card">
						<div class="card-header">
							<img src="{{ asset(category.imagePath) }}" alt="{{ category.name }}" class="w-100 imageCard">
						</div>
						<div class="card-body">
							<h5 class="text-center">{{ category.name }}</h5>
						</div>
						{# {% for product in category.products %} #}

						<div class="card-footer">
							<a class="btn btn-outline-success btn-lg border border-dark rounded-lg  t w-100" href="{{ path('customer_category_show',{'id' : category.id}) }}">
								Consulter
							</a>
						</div>
					</div>

				</div>
				{# {% endfor %} #}

			{% endfor %}
		</div>

	</div>

	<br>
	<br>

	{# ------------------------------------ FLYER ------------------------------------ #}
	<section class="section1 d-center justify-content-around flex-wrap flex-column   col-12">
		<h1 class="textHome1 titleSize fontTitle col-10 ">MENU DEJEUNER</h1>
		<p>Du mardi au vendredi</p>
		<p>12H - 14H30</p>
		<h2 class="textHome1 textSize fontText col-10 ">
			<span>PLAT 11€</span>
			<span>ENTREE+PLAT OU PLAT+DESSERT 15€</span>
			<span>ENTREE+ PLAT + DESSERT 18€</span>
			<span>WEEKENDS ET JOURS FERIEES</span>
			<span>12€ - 16€ - 19€</span>
		</h2>
	</section>
	{# ------------------------------------ FLYER ------------------------------------ #}
	

	<section class="map  d-center  col-sm-12 justify-content-around  pt-5">
		<div class="d-center-map ">
			<iframe class=" col-lg-9 marge" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.3404862857014!2d2.32134151584141!3d48.88984790644496!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66facdd056ea5%3A0x434b9db26f4d1fdc!2sBrasileirinho!5e0!3m2!1spt-PT!2sfr!4v1643890971193!5m2!1spt-PT!2sfr" allowfullscreen="" loading="lazy"></iframe>
		</div>
	</section>
{% endblock %}
